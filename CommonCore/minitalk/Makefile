NAME_SERVER = server
NAME_CLIENT = client
NAME_SERVER_BONUS = server_bonus
NAME_CLIENT_BONUS = client_bonus

SOURCES_SERVER = server.c
SOURCES_CLIENT = client.c
SOURCES_SERVER_BONUS = server_bonus.c
SOURCES_CLIENT_BONUS = client_bonus.c

OBJECTS_SERVER = $(SOURCES_SERVER:.c=.o)
OBJECTS_CLIENT = $(SOURCES_CLIENT:.c=.o)
OBJECTS_SERVER_BONUS = $(SOURCES_SERVER_BONUS:.c=.o)
OBJECTS_CLIENT_BONUS = $(SOURCES_CLIENT_BONUS:.c=.o)

CC = cc
CFLAGS = -Wextra -Wall -Werror

FTPRINTF_DIR = ./ft_printf
FTPRINTF_LIB = ftprintf.a
FTPRINTF_FLAGS = -lftprintf
FTPRINTF_PATH = $(FTPRINTF_DIR)/$(FTPRINTF_LIB)

LIBFT_DIR = ./libft
LIBFT_LIB = libft.a
LIBFT_FLAGS = -lft

all : $(NAME_SERVER) $(NAME_CLIENT)

bonus: $(NAME_SERVER_BONUS) $(NAME_CLIENT_BONUS)

$(NAME_SERVER): $(OBJECTS_SERVER) $(FTPRINTF_PATH) $(LIBFT_DIR)/$(LIBFT_LIB)
	$(CC) $(CFLAGS) $(OBJECTS_SERVER) -L$(FTPRINTF_DIR) -L$(LIBFT_DIR) $(LIBFT_FLAGS) $(FTPRINTF_FLAGS) -o $(NAME_SERVER)

$(NAME_CLIENT): $(OBJECTS_CLIENT) $(FTPRINTF_PATH) $(LIBFT_DIR)/$(LIBFT_LIB)
	$(CC) $(CFLAGS) $(OBJECTS_CLIENT) -L$(FTPRINTF_DIR) -L$(LIBFT_DIR) $(LIBFT_FLAGS) $(FTPRINTF_FLAGS) -o $(NAME_CLIENT)

$(NAME_SERVER_BONUS): $(OBJECTS_SERVER_BONUS) $(FTPRINTF_PATH) $(LIBFT_DIR)/$(LIBFT_LIB)
	$(CC) $(CFLAGS) $(OBJECTS_SERVER_BONUS) -L$(FTPRINTF_DIR) -L$(LIBFT_DIR) $(LIBFT_FLAGS) $(FTPRINTF_FLAGS) -o $(NAME_SERVER_BONUS)

$(NAME_CLIENT_BONUS): $(OBJECTS_CLIENT_BONUS) $(FTPRINTF_PATH) $(LIBFT_DIR)/$(LIBFT_LIB)
	$(CC) $(CFLAGS) $(OBJECTS_CLIENT_BONUS) -L$(FTPRINTF_DIR) -L$(LIBFT_DIR) $(LIBFT_FLAGS) $(FTPRINTF_FLAGS) -o $(NAME_CLIENT_BONUS)

%.o: %.c
	$(CC) $(CFLAGS) -I$(LIBFT_DIR) -I$(FTPRINTF_DIR) -c $< -o $@

$(LIBFT_DIR)/$(LIBFT_LIB):
	@$(MAKE) -C $(LIBFT_DIR) bonus

$(FTPRINTF_PATH):
	@$(MAKE) -C $(FTPRINTF_DIR)

clean: 
	@$(MAKE) -C $(LIBFT_DIR) clean
	@$(MAKE) -C $(FTPRINTF_DIR) clean
	rm -f $(OBJECTS_SERVER) $(OBJECTS_CLIENT) $(OBJECTS_SERVER_BONUS) $(OBJECTS_CLIENT_BONUS)

fclean: clean
	@$(MAKE) -C $(LIBFT_DIR) fclean
	@$(MAKE) -C $(FTPRINTF_DIR) fclean
	rm -f $(NAME_SERVER) $(NAME_CLIENT) $(NAME_CLIENT_BONUS) $(NAME_SERVER_BONUS)

re: fclean all

.PHONY: all clean fclean re